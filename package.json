{
  "name": "dashed",
  "packageManager": "yarn@3.1.1",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "server:dev": "yarn workspace server start",
    "client:dev": "yarn workspace client dev",
    "develop": "concurrently 'yarn:server:dev' 'yarn:client:dev'",
    "docker:start": "yarn workspace server start | awk '{ print \"[API]\", $0 }'"
  },
  "devDependencies": {
    "concurrently": "^7.2.2"
  }
}
